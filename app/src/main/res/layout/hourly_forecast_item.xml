<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/pill1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_rectanglehour"
    android:padding="10dp"
    app:layout_constraintHorizontal_bias="0"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="14dp"
    app:layout_constraintTop_toBottomOf="@id/hourlyForecast"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/hourlyTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10:00AM"
        android:textSize="10dp"
        android:textColor="#4F4F4F"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/hourlyIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wind"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hourlyTime"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/hourlyTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#333333"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hourlyIcon"
        android:layout_marginTop="10dp"
        android:text="62Â°F"/>



</androidx.constraintlayout.widget.ConstraintLayout>